<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
      
        <h3>Create New Listing</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" placeholder="Enter Your Title" class="form-control" required>
                <div class="valid-feedback">Title Looks Good!</div>
                <div class="invalid-feedback">Please Enter Your Title!</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" required></textarea>
                <div class="valid-feedback">Description Done!</div>
                <div class="invalid-feedback">Please Enter Your Short Description!</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Listing Image </label>
                <input name="listing[image]"  type="file" class="form-control" required/>
                
              </div>

              <div class="dropdown mb-3">
                <label for="title" class="form-label"> <b>Listing Category</b> </label><br>
                <button class="btn btn-light dropdown-toggle" type="button" 
                        data-bs-toggle="dropdown" >
                  Choose Category
      
                </button>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="#">Trending</a></li>
                  <li><a class="dropdown-item" href="#">Rooms</a></li>
                  <li><a class="dropdown-item" href="#">Iconic Cities</a></li>
                  <li><a class="dropdown-item" href="#">Castles</a></li>
                  <li><a class="dropdown-item" href="#">Mountain Views</a></li>
                  <li><a class="dropdown-item" href="#">Camping</a></li>
                  <li><a class="dropdown-item" href="#">Amazing Nature</a></li>
                  <li><a class="dropdown-item" href="#">Form</a></li>
                  <li><a class="dropdown-item" href="#">Arctic</a></li>
                  <li><a class="dropdown-item" href="#">Boats</a></li>
                </ul>
              </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" placeholder="Enter your Price" class="form-control" required>
                    <div class="valid-feedback">Price Done!</div>
                    <div class="invalid-feedback">Please Enter valid Price!</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="Enter your Country" class="form-control" required>
                    <div class="valid-feedback">Country Name Done!</div>
                    <div class="invalid-feedback">Please Enter Country Name!</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" placeholder="Enter Your location" class="form-control" required>
                <div class="valid-feedback">Location Done!</div>
                <div class="invalid-feedback">Please Enter Valid Location!</div>
            </div>
            <button class="btn btn-dark add-btn mb-5">Add</button>
        </form>
    </div>
</div>
